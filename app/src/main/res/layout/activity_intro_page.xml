<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".introPage"
    android:background="@drawable/t3">

    <Button
        android:id="@+id/con2"
        android:layout_width="223dp"
        android:layout_height="49dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#EF2F83"
        android:text="continue"
        android:textSize="17dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        tools:ignore="TouchTargetSizeCheck" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="179dp"
        android:layout_height="39dp"
        android:layout_marginEnd="116dp"
        android:text="more than 60 KG"
        android:textColor="#AD1457"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="TouchTargetSizeCheck" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="182dp"
        android:layout_height="44dp"
        android:layout_marginEnd="112dp"
        android:text="less than 60 KG"
        android:textColor="#AD1457"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="476dp"

        android:text="Choose set of your whight . "
        android:textColor="#434349"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>